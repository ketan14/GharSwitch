{
  "firestore": {
    "rules": "backend/firebase/firestore.rules",
    "indexes": "backend/firebase/firestore.indexes.json"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "backend/firebase/storage.rules"
  },
  "functions": {
    "source": "backend/firebase/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "source": "apps/web-portal",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
  }
}
