rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Tenant-scoped storage
    match /tenants/{tenantId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.token.tenantId == tenantId;
      allow write: if request.auth != null && request.auth.token.tenantId == tenantId;
    }
    
    // Firmware storage (read-only for devices)
    match /firmware/{version}/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // SuperAdmin only via backend
    }
    
    // User avatars
    match /avatars/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
